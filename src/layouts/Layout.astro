---
import Welcome from "../components/Welcome.astro";
import Footer from "../components/Footer.astro";
import Backdrop from "../components/Backdrop.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Tapestries: An Internet Archive Project</title>
  </head>
  <body>
    <Backdrop />
    <Welcome />
    <main>
      <slot />
    </main>
    <Footer />
    <div id="extra"></div>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Plus Jakarta Sans", sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    --text-color: rgba(0, 0, 0, 0.95);
    --backdrop-color: black;
    --background-color: #fff;
    --accent-color: rgb(19, 72, 237);
    --outer-margin: 64px;
    --inner-margin: 32px;
    --border-radius: 16px;
    --header-size: 10vw;
    --font-size: 20px;
    color: var(--text-color);
    background-color: var(--backdrop-color);
    @media screen and (max-width: 1023px) {
      --header-size: 72px;
      --outer-margin: 32px;
      --inner-margin: 16px;
    }
  }

  body {
    padding: var(--inner-margin);
  }

  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    background-color: transparent; /*var(--backdrop-color); */
    box-sizing: border-box;
    padding: var(--inner-margin);
    z-index: 2;
    border-top-left-radius: var(--border-radius);
    border-top-right-radius: var(--border-radius);
  }

  h2 {
    font-size: calc(var(--header-size) * 0.4);
    font-weight: 100;
    color: var(--accent-color);
    /* text-align: center; */
    margin: 0;
    margin-right: auto;
  }

  h3 {
    text-align: center;
    font-size: 36px;
  }

  section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--background-color);
    padding: var(--inner-margin);
    box-sizing: border-box;
    max-width: 75%;
    margin-bottom: var(--outer-margin);
    border-radius: var(--border-radius);
    /* box-shadow: 0 0 10px orange; */
    border: 6px solid orange;
  }

  section:nth-child(odd) {
    margin-left: auto;
  }

  section:nth-child(even) {
    margin-right: auto;
  }

  section h2 {
    font-weight: 700;
  }

  @media screen and (max-width: 1023px) {
    section {
      max-width: 100%;
    }
  }
  p,
  ul,
  li {
    font-size: var(--font-size);
    line-height: 1.333;
  }

  #extra {
    min-height: var(--inner-margin);
    width: 100%;
  }
</style>
